<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/bug_hunter</property>
		<property name="hibernate.connection.username">root</property>
		<property name="show_sql">true</property>	
		<property name="hbm2ddl.auto" >update</property>
		<mapping class="com.springRest.bugHunterAppWebservice.dto.UserDTO"/>
		<mapping class="com.springRest.bugHunterAppWebservice.dto.project.Project"/>
		
	</session-factory>
</hibernate-configuration>
